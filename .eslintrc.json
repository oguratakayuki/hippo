{
    "env": { "node": true, "es6": true },
    "extends": "plugin:react/recommended",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "unicorn"
    ],
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase",
          "ignore": [
            "\\.d\\.ts$"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
    }
  }
}
